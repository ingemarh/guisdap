#!/bin/sh
tail=
init=
my="$HOME/gup/mygup"
mflags="-nojvm -nosplash"
usage="Usage: guisdap [-a] [-i] [-b] [-B script] [-x] [-t] [-m path] [-g file]"
matlab="matlab"
mex=

TMP=$HOME/tmp
if [ ! -d $TMP ]; then
	mkdir $TMP
fi
SHELL=/bin/sh

#find GUP
filename=$0
while [ -h $filename ]; do
	lscmd=`ls -l $filename 2>/dev/null`
	f1=`echo "$lscmd" | awk '{ print $NF }'`
	fp=`echo "$f1" | awk '{ print index($1,"/") }'`
	if [ $fp != "1" ];then
		filename=`dirname $filename`/$f1
	else
		filename=$f1
	fi
done
GUP=`dirname $filename`
GUP=`dirname $GUP`
#echo $GUP

if [ -d $GUP/mex7 ]; then
	mex=$GUP/mex7:
	if [ -d $GUP/NW/mex7 ]; then
		mex=$mex$GUP/NW/mex7:
	fi
elif [ -d $GUP/mex6 ]; then
	mex=$GUP/mex6:
	if [ -d $GUP/NW/mex6 ]; then
		mex=$mex$GUP/NW/mex6:
	fi
fi

while getopts aibB:xtr:g: flag
do
	case $flag in
		a) tail="-r analyse";;
		i) init=":$GUP/init";;
		b) tail="-r go_on(-1) >/dev/null 2>&1 &"
		   mflags=
		   matlab="nohup $matlab"
		   ;;
		B) tail="-r $OPTARG >$TMP/$OPTARG 2>&1 &"
		   mflags=
		   matlab="nohup $matlab"
		   ;;
		g) tail="-r go_on $OPTARG";;
		m) my="$OPTARG";;
		t) mflags=;;
		x) mex=;;
		?) echo $usage
		   exit 2;;
	esac
done
shift `expr $OPTIND - 1`

if [ -z "$mflags" ];then
	unset DISPLAY
fi
if [ "$*" != "" ];then
	mflags=$*
fi


if [ ! -d $my ];then
	my=
else
	my=$my:
fi

MATLABPATH=$my$mex$GUP/anal$init
IRIPATH=$GUP/models/iri2001

sys=`uname -s`
case $sys in
	SunOS)
		PATH=/usr/bin:/usr/local/bin:$GUP/bin
		LD_LIBRARY_PATH=$GUP/lib:/opt/SUNWspro/lib:/usr/local/ssl/lib
		;;
	Linux)
		LD_LIBRARY_PATH=$GUP/lib
		PATH=$PATH:$GUP/bin
		;;
esac
if [ -d $GUP/NW/lib ]; then
	LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$GUP/NW/lib
fi

#echo "$matlab $mflags $tail"
export TMP MATLABPATH IRIPATH PATH LD_LIBRARY_PATH SHELL
$matlab $mflags $tail
